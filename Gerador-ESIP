<div class="container">

    <h2>Gerar Ingresso</h2>

    <input type="text" id="nome" placeholder="Nome completo">
    <input type="text" id="cpf" placeholder="CPF apenas n√∫meros">
    <input type="text" id="evento" placeholder="Nome do evento">

    <button onclick="gerarIngresso()">Gerar QR Code</button>

    <div id="qrcode"></div>

</div>

<script>

function gerarIngresso() {
    let nome = document.getElementById("nome").value.trim();
    let cpf  = document.getElementById("cpf").value.trim();
    let evento = document.getElementById("evento").value.trim();

    if (!nome || !cpf || !evento) {
        alert("Preencha todos os campos!");
        return;
    }

    if (cpf.length !== 11) {
        alert("CPF inv√°lido!");
        return;
    }

    // üîí Impedir mais de um ingresso por CPF
    if (localStorage.getItem("cpf_" + cpf)) {
        alert("‚ö† Este CPF j√° gerou um ingresso!");
        return;
    }

    // Salvar CPF gerado
    localStorage.setItem("cpf_" + cpf, "gerado");

    // üîê Conte√∫do do QR
    let dados = JSON.stringify({
        nome: nome,
        cpf: cpf,
        evento: evento,
        codigo: "ESIP-" + Math.random().toString(36).substr(2, 8)
    });

    document.getElementById("qrcode").innerHTML = "";

    new QRCode(document.getElementById("qrcode"), {
        text: dados,
        width: 260,
        height: 260,
        correctLevel: QRCode.CorrectLevel.H
    });

    alert("Ingresso gerado com sucesso!");
}

</script>

